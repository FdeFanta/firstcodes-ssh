
public class bubbleSort {
	public static void main(String[] args) {
		int v[] = {3, 6, 2, 1, 8, 4};
		int aux;
		boolean controle;
		
		for(int i=0; i < v.length;++i) {
			
			
			controle=true;
			
			
			
			
			for(int j=0; j < (v.length-1);++j) {
				if(v[j] > v[j+1]) {
					
					aux =v[j];
					v[j]=v[j+1];
					v[j+1]=aux;
					controle = false;
					
				}
				
			}

			if(controle) {
				break;
			
		}
		
		}
		for(int i=0; i < v.length;++i) 
		{
			System.out.print(v[i]+"");
		}
		
	}

}
